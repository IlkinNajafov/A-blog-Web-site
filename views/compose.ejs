<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="postTitle" placeholder="Title">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea type="text" class="form-control" cols="30" rows="9" name="postBody" class="textarea"
            placeholder="Post here..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>
<%- include("partials/footer"); -%>